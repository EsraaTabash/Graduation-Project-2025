<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar"/>

    <style name="NumberPickerStyle">

        <item name="android:fontFamily">@font/marhey</item>
    </style>
    <!-- زر بدون ظل وخلفية بيضاء -->
    <style name="DrawerButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#2BD5B7</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- خط فاصل -->
    <style name="DividerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E0E0E0</item>
    </style>
    <style name="NavDrawerItemText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>  <!-- لون أزرق غامق بارد -->
        <item name="android:textSize">16sp</item>      <!-- حجم مناسب للنص -->
        <item name="android:fontFamily">@font/tajawal_regular</item> <!-- خطك المفضل -->
        <item name="android:textStyle">bold</item>    <!-- خط عريض -->
    </style>

</resources>
