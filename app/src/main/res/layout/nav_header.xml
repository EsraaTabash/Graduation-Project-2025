<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="20dp"
    android:background="@drawable/nav_background_gradient"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- صورة الطفل -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/circle_white_bg"
        android:contentDescription="صورة الطفل"
        android:scaleType="centerCrop"
        android:src="@drawable/ch1" />


    <!-- معلومات الطفل -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">

        <!-- اسم الطفل مع أيقونة التعديل -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/tajawal_bold"
                android:gravity="start"
                android:text="أيمـــن"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <!-- بريد الطفل الإلكتروني -->
        <TextView
            android:id="@+id/child_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/tajawal_regular"
            android:maxLines="1"
            android:layout_gravity="center"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:text="a2020ayay@example.com"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
